<h4 id="schema">Schema</h4>
<hr />
<div class="highlighter-rouge"><div class="highlight"><pre class="highlight"><code>type User {
	id: ID!
	name: String
}

type Query {
	getUser(id: ID!): User
}

type Mutation {
	createUser(input: CreateUserInput!): User
}

input CreateUserInput {
	name: String
}
</code></pre></div></div>

